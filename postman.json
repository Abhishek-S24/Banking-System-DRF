  "item": [
    {
      "name": "User APIs",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"john_doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"roles\": []\n}"
            },
            "url": {"raw": "{{base_url}}/api/user/register/", "host": ["{{base_url}}"], "path": ["api", "user", "register"]}
          }
        },
        {
          "name": "Login (Get OTP)",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {"mode": "raw", "raw": "{\n  \"username\": \"john_doe\",\n  \"password\": \"password123\"\n}"},
            "url": {"raw": "{{base_url}}/api/user/login/", "host": ["{{base_url}}"], "path": ["api", "user", "login"]}
          }
        },
        {
          "name": "Verify OTP",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {"mode": "raw", "raw": "{\n  \"username\": \"john_doe\",\n  \"otp\": \"123456\"\n}"},
            "url": {"raw": "{{base_url}}/api/user/verify-otp/", "host": ["{{base_url}}"], "path": ["api", "user", "verify-otp"]}
          }
        },
        {
          "name": "Get Users List",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{access_token}}"}],
            "url": {"raw": "{{base_url}}/api/user/", "host": ["{{base_url}}"], "path": ["api", "user"]}
          }
        },
        {
          "name": "Get User by Email",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{access_token}}"}],
            "url": {"raw": "{{base_url}}/api/user/{{email}}/", "host": ["{{base_url}}"], "path": ["api", "user", "{{email}}"]}
          }
        },
        {
          "name": "Update User (PUT)",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Authorization", "value": "Bearer {{access_token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {"mode": "raw", "raw": "{\n  \"username\": \"john_doe\",\n  \"email\": \"john@example.com\",\n  \"roles\": []\n}"},
            "url": {"raw": "{{base_url}}/api/user/{{email}}/", "host": ["{{base_url}}"], "path": ["api", "user", "{{email}}"]}
          }
        },
        {
          "name": "Deactivate User",
          "request": {
            "method": "DELETE",
            "header": [{"key": "Authorization", "value": "Bearer {{access_token}}"}],
            "url": {"raw": "{{base_url}}/api/user/{{email}}/", "host": ["{{base_url}}"], "path": ["api", "user", "{{email}}"]}
          }
        }
      ]
    },
